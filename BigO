<script>
const slider = document.getElementById("slider");
const nValue = document.getElementById("nValue");

const o1 = document.getElementById("o1");
const on = document.getElementById("on");
const on2 = document.getElementById("on2");
const olog = document.getElementById("olog");

const onCount = document.getElementById("onCount");
const on2Count = document.getElementById("on2Count");
const ologCount = document.getElementById("ologCount");

function block(className="") {
    const b = document.createElement("div");
    b.className = "block " + className;
    return b;
}

function update(n) {
    nValue.textContent = n;

    o1.innerHTML = "";
    on.innerHTML = "";
    on2.innerHTML = "";
    olog.innerHTML = "";

    o1.appendChild(block());

    for (let i = 0; i < n; i++) {
        on.appendChild(block());
    }

    for (let i = 0; i < n*n; i++) {
        on2.appendChild(block("n2"));
        if (i > 200) break; // stop browser dying
    }

    let log = Math.floor(Math.log2(n));
    for (let i = 0; i < log; i++) {
        olog.appendChild(block("log"));
    }

    onCount.textContent = n;
    on2Count.textContent = n * n + " (capped visually)";
    ologCount.textContent = log;
}

slider.addEventListener("input", e => update(+e.target.value));

update(slider.value);
</script>

